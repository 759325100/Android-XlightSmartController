<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">



    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_below="@+id/backImageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backImageView"
        android:scaleX=".8"
        android:scaleY=".8"
        android:src="@drawable/go_back"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        />


    <View
        android:id="@+id/line_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/timePicker"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@color/dividerColorWhite" />



    <LinearLayout
        android:id="@+id/repeatLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_1"
        android:orientation="horizontal"
        android:paddingBottom="22dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="22dp">

    <CheckBox
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:id="@+id/isRepeatCheckbox"
        android:textColor="@android:color/white"
        style="@style/CustomCheckBox" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="S       M       T       W       T       F       S"
            android:textAlignment="textEnd"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />


    </LinearLayout>

    <View
        android:id="@+id/line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/repeatLL"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/dividerColorWhite" />

    <LinearLayout
    android:id="@+id/scheduleLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/line_2"
    android:orientation="horizontal"
    android:gravity="center_horizontal"
    android:paddingBottom="22dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="22dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_weight="1"
        android:gravity="left|start"
        android:text="Scenario"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:paddingLeft="5dp"/>

    <Spinner
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/scenarioSpinner"
        >

    </Spinner>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp" >


        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:text="ADD"
            android:id="@+id/addButton"
            android:textColor="@color/textDarkGrey"/>

    </LinearLayout>

</RelativeLayout>